# Database Configuration
DB_USER=docadmin
DB_PASSWORD=change-this-password
DB_NAME=document_compliance
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://docadmin:change-this-password@localhost:5432/document_compliance

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-key-here
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=templates

# Security
SECRET_KEY=your-very-secret-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Document Compliance System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,doc,docx,tex,png,jpg,jpeg
UPLOAD_PATH=uploads

# Template Processing
TEMPLATE_CACHE_TTL=3600
MAX_CONCURRENT_VALIDATIONS=10

# Validation Settings
DEFAULT_SIMILARITY_THRESHOLD=0.85
SSIM_WEIGHT=0.4
PERCEPTUAL_HASH_WEIGHT=0.3
LAYOUT_MATCH_WEIGHT=0.3

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend URL (for QR codes and links)
FRONTEND_URL=http://localhost:3000
